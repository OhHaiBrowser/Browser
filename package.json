{
  "name": "OhHaiBrowser",
  "version": "3.3.0",
  "license": "ISC",
  "description": "Browser the internet",
  "homepage":"https://ohhaibrowser.com",
  "author": {
    "name":"Lucas Reade",
    "email": "lucas.reade@gmail.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "files": [
    "*.js",
    "build",
    "node_modules"
  ],
  "build": {
    "icon": "window/assets/icon.png",
    "appId": "OhHai.Browser",
    "mac": {
      "icon": "window/assets/icon.png",
      "category": "public.app-category.utilities",
      "target": [
        "default"
      ]
    },
    "mac":{
      "icon":"window/assets/mac_icon.icns"
    },
    "linux": {
      "icon": "window/assets/linux_icon.png",
      "target": [
        "deb"
      ]
    },
    "win": {
      "icon": "window/assets/win_icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "fileAssociations": {
      "ext": [
        "html",
        "htm"
      ],
      "name": "Web files",
      "role": "Viewer"
    },
    "protocols": {
      "name": "Web urls",
      "schemes": [
        "http",
        "https"
      ],
      "role": "Viewer"
    },
    "nsis": {
      "perMachine": "true"
    }
  },
  "dependencies": {
    "dexie": "^2.0.4"
  },
  "devDependencies": {
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5"
  }
}
